<h2 class="title">註冊</h2>
<!-- bulma的h1~h6字體大小都一樣 所以要用一些類別才能控制大小 -->

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :username, '使用者帳號' %> <i>（不可與他人重複）</i><br />
    <div class="control">
      <%= f.text_field :username, autofocus: true, class: "input is-medium" %>
      <!-- <input autofocus="autofocus" class="input is-medium" type="text" name="user[username]" id="user_username" /> -->
    </div>
    <p class="help">範例：tsai</p>
  </div>
  
  <div class="field">
    <%= f.label :email %><br />
    <div class="control">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input is-medium' %>
    </div>
  </div>
  <!-- <div class="field">
    <label class="label">Name</label>
    <div class="control">
      <input class="input" type="text" placeholder="Text input">
    </div>
  </div> -->

  <div class="field">
    <%= f.label :password, '密碼' %>
    <div class="control">
      <% if @minimum_password_length %>
      <em>(至少 <%= @minimum_password_length %> 字元)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: 'input is-medium' %>
    </div>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, '確認密碼' %><br />
    <div class="control">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input is-medium' %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "註冊", class: 'button is-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
<!-- 用links檔案部分渲染 -->
