<h1 class="title">會員升級頁面</h1>

<section class="section">
    <div class="columns">
      <!-- 左邊VIP欄位 -->
      <div class="column is-4 is-offset-2">
        <div class="card">
          <div class="card-image">
            <figure class="image is-4by3">
              <img src="https://fakeimg.pl/1280x960/?text=VIP" alt="Placeholder image">
            </figure>
          </div>
          <div class="card-content">
            <div class="media">
              <div class="media-left">
                <figure class="image is-48x48">
                  <img src="https://fakeimg.pl/96x96/?text=CCH" alt="Placeholder image">
                </figure>
              </div>
              <div class="media-content">
                <p class="title is-4">VIP 會員</p>
                <p class="subtitle is-6">TWD 10</p>
              </div>
            </div>
            <div class="content">
              Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus nec iaculis mauris. 
            </div>
            <%= link_to '購買', payment_users_path(type: 'vip'), class: 'button is-danger is-fullwidth' %>
            <!-- 用type區分 VIP會員 與 白金會員 的 付費頁面路徑 -->
            <!-- http://localhost:3000/users/payment?type=vip -->
          </div>
        </div>      
      </div>

      <!-- 右邊白金會員欄位 -->
      <div class="column is-4">
        <div class="card">
          <div class="card-image">
            <figure class="image is-4by3">
              <img src="https://fakeimg.pl/1280x960/?text=Platinum" alt="Placeholder image">
            </figure>
          </div>
          <div class="card-content">
            <div class="media">
              <div class="media-left">
                <figure class="image is-48x48">
                  <img src="https://fakeimg.pl/96x96/?text=CCH" alt="Placeholder image">
                </figure>
              </div>
              <div class="media-content">
                <p class="title is-4">白金會員</p>
                <p class="subtitle is-6">TWD 20</p>
              </div>
            </div>
            <div class="content">
              Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus nec iaculis mauris.
            </div>
            <%= link_to '購買', payment_users_path(type: 'platinum'), class: 'button is-success is-fullwidth' %>
            <!-- http://localhost:3000/users/payment?type=platinum -->
          </div>
        </div>
      </div>
    </div>
  </section>